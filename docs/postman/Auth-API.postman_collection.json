    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const json = pm.response.json();",
              "if (json.token) {",
              "    pm.collectionVariables.set('token', json.token);",
              "}",
              "if (json.user && json.user.email) {",
              "    pm.collectionVariables.set('email', json.user.email);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "login"
          ]
        },
        "description": "Inicia sesión y guarda automáticamente el token en la variable de colección token."
      }
    },
